<Page x:Class="WPF_SWL_Dice_Calculator.Views.pgAttackPool"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_SWL_Dice_Calculator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="pgAttackPool">

    <Page.Resources>
        <ResourceDictionary Source="../Themes/BasicTheme.xaml"/>
    </Page.Resources>

    <Grid x:Name="grdMain" Margin="10,10,10,10">
        <Label x:Name="lblTest" Content="Attack Page" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Panel.ZIndex="1"/>
        <Rectangle x:Name="rctWallpaper" Fill="{DynamicResource Wallpaper}" HorizontalAlignment="Center" Width="417" Height="410" VerticalAlignment="Center"/>

        <Rectangle x:Name="rctHolo" Stroke="Black" Fill="{DynamicResource HologramGradient}" Panel.ZIndex="1"/>
        <Rectangle x:Name="rctBackDrop" Stroke="Black" Fill="#3FFFFFFF"/>
    </Grid>
    
</Page>
