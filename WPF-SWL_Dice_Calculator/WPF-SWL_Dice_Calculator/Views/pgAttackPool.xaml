<Page x:Class="WPF_SWL_Dice_Calculator.Views.pgAttackPool"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_SWL_Dice_Calculator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="pgAttackPool">

    <Page.Resources>
        <ResourceDictionary Source="../Themes/BasicTheme.xaml"/>
    </Page.Resources>

    <Grid x:Name="grdMain" Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="242*"/>
            <RowDefinition Height="185*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Rectangle x:Name="rctWallpaper" Fill="{DynamicResource Wallpaper}" Margin="126,54,126,54" Grid.RowSpan="2" Panel.ZIndex="-1"/>
        <Rectangle x:Name="rctHolo" Stroke="Black" Fill="{DynamicResource HologramGradient}" Panel.ZIndex="-1" Grid.RowSpan="3"/>
        <Rectangle x:Name="rctBackDrop" Stroke="Black" Fill="#3FFFFFFF" Grid.RowSpan="3" Panel.ZIndex="-1"/>
        <Grid x:Name="grdResutls" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="60*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="grdHits" Grid.Row="1"/>
            <Grid x:Name="grdCriticalHits" Grid.Column="1" Grid.Row="1"/>
            <Grid x:Name="grdSurges" Grid.Column="2" Grid.Row="1"/>
            <!--<Border BorderThickness="1" BorderBrush="{DynamicResource BoxBorderColor}" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="3"/>-->
        </Grid>
        <Grid x:Name="grdDiceSelection" Margin="10,10,10,0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="grdWhiteAttack">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="imgWhiteAttack" Grid.Column="1" Source="/Images/DiceIcons/WhiteAttackDie.png"/>
                <TextBox HorizontalAlignment="Center" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="47" Margin="0,79,0,0"/>
            </Grid>
            <Grid x:Name="grdBlackAttack" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="imgBlackAttack" Grid.Column="1" Source="/Images/DiceIcons/BlackAttackDie.png"/>
            </Grid>
            <Grid x:Name="grdRedAttack" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="imgRedAttack" Grid.Column="1" Source="/Images/DiceIcons/RedAttackDie.png"/>
            </Grid>
            <!--<Border BorderThickness="1" BorderBrush="{DynamicResource BoxBorderColor}" Grid.Column="0"/>
            <Border BorderThickness="1" BorderBrush="{DynamicResource BoxBorderColor}" Grid.Column="1"/>
            <Border BorderThickness="1" BorderBrush="{DynamicResource BoxBorderColor}" Grid.Column="2"/>
            <Border BorderThickness="1" BorderBrush="{DynamicResource BoxBorderColor}" Grid.Column="0" Grid.RowSpan="3"/>-->
        </Grid>
        <Grid x:Name="grdButtons" Grid.Row="2">
            <Button x:Name="btnRoll" Grid.Column="1" Panel.ZIndex="2" Margin="5,5,5,5" FontFamily="Arial Black" FontSize="24">
                <Viewbox>
                    <TextBlock x:Name="txbRollButton" Text="ROLL" />
                </Viewbox>
            </Button>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Page>
